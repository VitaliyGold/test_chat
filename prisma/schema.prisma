// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Auth_data {
  id Int @id @default(autoincrement())
  login String @unique
  password String
  salt String
  Profile Profile_data?
  user_id String @unique @db.Uuid
  Chats Chats_data[]
}

model Profile_data {
  id Int @id @default(autoincrement())
  name String
  auth_data Auth_data @relation(fields: [user_id], references: [user_id])
  user_id String @unique @db.Uuid 
}


model Chats_data {
  id Int @id @default(autoincrement())
  chat_type Int
  chat_id String @unique @db.Uuid
  owner Auth_data @relation(fields: [owner_id], references: [user_id])
  owner_id String @unique @db.Uuid
  members_table_id String @unique @db.Uuid
  chat_name String?
}

model Chats_members_data {
  id Int @id @default(autoincrement())
  chat Chats_data @relation(fields: [chat_id], references: [chat_id]) 
  chat_id String @unique @db.Uuid
}